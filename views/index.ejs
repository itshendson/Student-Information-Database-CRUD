    <h4>Enter Student Information</h4>
    <form>
        <input id="post-name" type="text" placeholder="Full Name" name="name"></br>
        <input id="post-major" type="text" placeholder="Major" name="major"></br>
        <input id="post-gpa" type="text" placeholder="GPA" name="gpa"></br>
        <input id="post-id" type="number" placeholder="Student ID" name="id"></br>
        <button id="post-button" type="submit">Submit</button>
    </form>

    <h4>Change Major</h4>
    <form>
      <input id="search-student-id" type=""number" placeholder="Enter Student ID">
      <input id="update-student-major" type=""number" placeholder="Enter New Student Major">
      <button id="update-button" type="submit">Submit</button>
    </form>

    <h4>Delete Student Record</h4>
    <form>
      <input id="delete-student-by-id" type=""number" placeholder="Enter Student ID">
      <button id="delete-button" type="submit">Submit</button>
      <div id="delete-message"></div>
    </form>
    
    <h4>Database Results</h4>
    <ul class="student-container">
      <% for(var i = 0; i < students.length; i++) {%>
        <li class="student">  
          STUDENT ID: <span><%= students[i].id %></span>, 
          NAME: <span><%= students[i].name %></span>, 
          MAJOR: <span><%= students[i].major %></span>, 
          GPA: <span><%= students[i].gpa %></span> 
        </li>
      <% } %>
    </ul>
</body>
